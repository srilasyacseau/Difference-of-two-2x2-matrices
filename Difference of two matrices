#include <stdio.h>
int main()
{
    int i,j,a[2][2],b[2][2],Dif[2][2];
    
    for(i=0;i<2;i++)
	{
		for(j=0;j<2;j++)
		{
		printf("\tEnter the element a[%d,%d]:",i,j);
		scanf("%d",&a[i][j]);
	    }
	    printf("\n");
	}
	
	printf("\tThe First Matrix is: \n");
	printf("\n");
	
	for(i=0;i<2;i++)
	{
		for(j=0;j<2;j++)
		{
		printf("\t%d ",a[i][j]);
	    }
	    printf("\n");
	}
	
	
	
	   printf("\n");
	
	
	 for(i=0;i<2;i++)
	{
		for(j=0;j<2;j++)
		{
		printf("\tEnter the element b[%d,%d]:",i,j);
		scanf("%d",&b[i][j]);
	    }
	    printf("\n");
	}
	
	printf("\tThe Second Matrix is: \n");
	printf("\n");
	
	for(i=0;i<2;i++)
	{
		for(j=0;j<2;j++)
		{
		printf("\t%d ",b[i][j]);
	    }
	    printf("\n");
	}
	
	for(i=0;i<2;i++)
	{
	    for(j=0;j<2;j++)
	    {
	        Dif[i][j] = a[i][j] - b[i][j];
	        
	    }
	}
	
	printf("\n");
	printf("\tDifference: \n");
	printf("\n");
	
	for(i=0;i<2;i++)
	{
	    for(j=0;j<2;j++)
	    {
	        printf("\t%d",Dif[i][j]);
	    }
    printf("\n");
	}
    
    return 0;
}
